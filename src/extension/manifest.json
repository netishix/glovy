{
  "name": "Glovy",
  "version": "1.0",
  "description": "A simple extension for chrome to intercept http requests on the fly",
  "author": "netishix <netishix@gmail.com>",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "http://*/",
    "https://*/",
    "wss://*/"
  ],
  "background": {
    "scripts": [
      "background/index.js"
    ]
  },
  "web_accessible_resources": [
    "web-accessible-resources/ng-glovy/index.html",
    "web-accessible-resources/glovy-ui.html",
    "web-accessible-resources/glovy-ui.css"
  ],
  "browser_action": {
    "default_icon": "icons/default-icon.png"
  }
}
